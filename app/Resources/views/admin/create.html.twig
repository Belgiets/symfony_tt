{% extends "base.html.twig" %}
{% block title %}Create user{% endblock %}
{% block body %}
    <h1>Create user</h1>
    <a href="{{ absolute_url(path('admin')) }}">back</a>
    <div class="row">
        <div class="col-xs-12 col-sm-4">
            {{ form_start(form, {'attr': {'id': 'createForm', 'novalidate': 'novalidate'}}) }}
            {{ form_errors(form) }}
            <div>
                {{ form_label(form.fname, 'first name') }}
                {{ form_widget(form.fname) }}
                {{ form_errors(form.fname) }}
            </div>
            <div>
                {{ form_label(form.lname, 'last name') }}
                {{ form_widget(form.lname) }}
                {{ form_errors(form.lname) }}
            </div>
            <div>
                {{ form_label(form.email, 'email') }}
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>
            <div>
                {{ form_widget(form.save) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}