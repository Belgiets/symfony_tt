{% extends "base.html.twig" %}
{% block title %}User{% endblock %}
{% block body %}
    <h1>User page</h1>
    <a href="{{ absolute_url(path('admin')) }}">back</a>
    <h2>{{ person.fname }} {{ person.lname }}</h2>
    <div class="row">
        <div class="col-xs-12 col-sm-4">
            {{ form_start(form, {'attr': {'id': 'mailForm', 'class': 'mailform', 'novalidate': 'novalidate'}}) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
        <div class="col-xs-12 col-sm-7 col-sm-offset-1">
            {% set messages = person.messages.getValues %}
            {% for message in messages %}
                <div class="msg">
                    <h4>{{ message.topic }}</h4>
                    <p>{{ message.body }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
    {#{{ dump(person.messages.getValues) }}#}
{% endblock %}